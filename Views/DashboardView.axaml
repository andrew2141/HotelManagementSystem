<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia_application.Views.DashboardView">
    <StackPanel Margin="20">
        <TextBlock Text="Дашборд" FontSize="24" Margin="0,0,0,20" />
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <StackPanel Width="200">
                <TextBlock Text="Всего номеров" />
                <TextBlock Text="{Binding TotalRooms}" FontSize="20" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Занято" />
                <TextBlock Text="{Binding OccupiedRooms}" FontSize="20" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Свободно" />
                <TextBlock Text="{Binding AvailableRooms}" FontSize="20" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Загрузка (%)" />
                <TextBlock Text="{Binding OccupancyRate}" FontSize="20" />
            </StackPanel>
        </StackPanel>
        <DataGrid Items="{Binding RecentBookings}" AutoGenerateColumns="True" />
        <DataGrid Items="{Binding PendingCleaningTasks}" AutoGenerateColumns="True" />
    </StackPanel>
</UserControl>