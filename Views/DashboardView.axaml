<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia_application.Views.DashboardView">
    <StackPanel Margin="20">
        <TextBlock Text="Дашборд" FontSize="24" Margin="0,0,0,20" />
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <StackPanel Width="200">
                <TextBlock Text="Всего номеров" />
                <TextBlock Text="{Binding TotalRooms}" FontSize="20" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Занято" />
                <TextBlock Text="{Binding OccupiedRooms}" FontSize="20" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Свободно" />
                <TextBlock Text="{Binding AvailableRooms}" FontSize="20" />
            </StackPanel>
            <StackPanel Width="200">
                <TextBlock Text="Загрузка (%)" />
                <TextBlock Text="{Binding OccupancyRate}" FontSize="20" />
            </StackPanel>
        </StackPanel>
        <TextBlock Text="Последние бронирования" FontSize="16" Margin="0,0,0,10" />
        <DataGrid ItemsSource="{Binding RecentBookings}" AutoGenerateColumns="False" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookingID}" Width="50" />
                <DataGridTextColumn Header="Гость" Binding="{Binding GuestName}" Width="150" />
                <DataGridTextColumn Header="Номер" Binding="{Binding RoomNumber}" Width="80" />
                <DataGridTextColumn Header="Заезд" Binding="{Binding CheckInDate, StringFormat='dd.MM.yyyy'}" Width="100" />
                <DataGridTextColumn Header="Выезд" Binding="{Binding CheckOutDate, StringFormat='dd.MM.yyyy'}" Width="100" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="Задачи по уборке" FontSize="16" Margin="0,0,0,10" />
        <DataGrid ItemsSource="{Binding PendingCleaningTasks}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ScheduleID}" Width="50" />
                <DataGridTextColumn Header="Номер" Binding="{Binding RoomNumber}" Width="80" />
                <DataGridTextColumn Header="Дата" Binding="{Binding ScheduledDate, StringFormat='dd.MM.yyyy'}" Width="100" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100" />
                <DataGridTextColumn Header="Уборщик" Binding="{Binding EmployeeName}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>