<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Avalonia_application.Views.LoginWindow"
        Title="Вход в систему"
        Width="400" Height="300">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Text="{Binding Username}" Watermark="Имя пользователя" />
        <TextBox Text="{Binding Password}" Watermark="Пароль" PasswordChar="*" />
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" />
        <Button Content="Войти" Command="{Binding LoginCommand}" />
    </StackPanel>
</Window>