<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Avalonia_application.Views.MainWindow"
        Title="Система управления гостиницей"
        Width="1200" Height="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Панель навигации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
            <!-- Исправление: Padding перенесен с StackPanel на Border -->
            <Border Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentUserText}" VerticalAlignment="Center" Margin="10,0" />
                    <TextBlock Text="{Binding CurrentDateTimeText}" VerticalAlignment="Center" Margin="10,0" />
                    <Button Content="Выход" Command="{Binding LogoutCommand}" Margin="10,0" />
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Основное содержимое -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>